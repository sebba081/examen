<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>EcoVida - Registro de Reciclaje</title>

    <!-- AdminLTE CSS -->
    <link rel="stylesheet" href="/admin-lte/dist/css/adminlte.min.css" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Font Awesome -->
    <link rel="stylesheet"
      href="/@fortawesome/fontawesome-free/css/all.min.css" />
    <!-- Personalizado-->
    <link rel="stylesheet" href="/css/styles.css" />

  </head>

  <body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

      <!-- Navbar -->
      <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#"><i
                class="fas fa-bars"></i></a>
          </li>
        </ul>
      </nav>

      <!-- Sidebar -->
      <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <a href="/" class="brand-link">
          <span class="brand-text font-weight-light">EcoVida</span>
        </a>
        <div class="sidebar">
          <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column"
              data-widget="treeview" role="menu">
              <li class="nav-item">
                <a href="/" class="nav-link active">
                  <i class="nav-icon fas fa-recycle"></i>
                  <p>Dashboard</p>
                </a>
              </li>
            </ul>
          </nav>
        </div>
      </aside>

      <!-- Content Wrapper -->
      <div class="content-wrapper">
        <!-- Page header -->
        <section class="content-header">
          <div class="container-fluid">
            <h1><i class="fas fa-leaf text-success mr-2"></i> Registro de
              Reciclaje</h1>
          </div>
        </section>

        <!-- Main content -->
        <section class="content">
          <div class="container-fluid">
            <div class="row">

              <!-- Formulario -->
              <div class="col-md-6">
                <div class="card card-success">
                  <div class="card-header">
                    <h3 class="card-title"><i
                        class="fas fa-plus-circle mr-1"></i>Registrar Nueva
                      Entrega</h3>
                  </div>
                  <form id="recycleForm">
                    <div class="card-body">
                      <div class="form-group">
                        <label for="nombre">Nombre del Vecino</label>
                        <input type="text" class="form-control" id="nombre"
                          name="nombre" placeholder="Ej: Juan Pérez" required />
                      </div>
                      <div class="form-group">
                        <label for="material">Tipo de Material</label>
                        <select class="form-control" id="material"
                          name="material" required>
                          <option value>Seleccione un material</option>
                          <option value="papel">Papel</option>
                          <option value="carton">Cartón</option>
                          <option value="plastico">Plástico</option>
                          <option value="vidrio">Vidrio</option>
                        </select>
                      </div>
                      <div class="form-group">
                        <label for="cantidad">Cantidad (kg)</label>
                        <input type="number" class="form-control" id="cantidad"
                          name="cantidad" min="0.1" step="0.1"
                          placeholder="Ej: 2.5" required />
                      </div>
                    </div>
                    <div class="card-footer text-right">
                      <button type="submit" class="btn btn-success">
                        <i class="fas fa-save mr-1"></i>Registrar Entrega
                      </button>
                    </div>
                  </form>
                </div>
              </div>

              <!-- Tabla -->
              <div class="col-md-6">
                <div class="card card-outline card-secondary">
                  <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-list-alt mr-1"></i>
                      Entregas Registradas</h3>
                  </div>
                  <div class="card-body table-responsive p-0">
                    <table id="entregasTable"
                      class="table table-hover table-striped text-nowrap">
                      <thead class="thead-light">
                        <tr>
                          <th>Nombre</th>
                          <th>Material</th>
                          <th>Cantidad (kg)</th>
                          <th>Acciones</th>
                        </tr>
                      </thead>
                      <tbody>
                        <!-- Aquí se agregan las entregas -->
                      </tbody>
                    </table>

                  </div>
                </div>
              </div>

            </div>
          </div>
        </section>
      </div>

      <!-- Footer -->
      <footer class="main-footer">
        <div class="float-right d-none d-sm-block">
          <b>Versión</b> 1.0.0
        </div>
        <strong>&copy; 2023 <a href="https://ecovida.com">EcoVida</a>.</strong>
        Todos los derechos reservados.
      </footer>
      <!-- Modal de alerta -->
      <div class="modal fade" id="modalAlerta" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content bg-warning">
            <div class="modal-header">
              <h5 class="modal-title"><i
                  class="fas fa-exclamation-triangle"></i> Atención</h5>
              <button type="button" class="close" data-bs-dismiss="modal"
                aria-label="Cerrar">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <!-- Mensaje dinámico -->
            </div>
          </div>
        </div>
      </div>

      <!-- Modal de confirmación -->
      <div class="modal fade" id="modalConfirmar" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content bg-danger text-white">
            <div class="modal-header">
              <h5 class="modal-title"><i class="fas fa-trash"></i> Confirmar
                eliminación</h5>
              <button type="button" class="close" data-bs-dismiss="modal"
                aria-label="Cerrar">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <!-- Mensaje dinámico -->
            </div>
            <div class="modal-footer justify-content-end">
              <button type="button" class="btn btn-light"
                data-bs-dismiss="modal">Cancelar</button>
              <button type="button" class="btn btn-dark"
                id="btnConfirmar">Eliminar</button>
            </div>
          </div>
        </div>
      </div>

    </div>

    <!-- Scripts -->
    <script src="/jquery/dist/jquery.min.js"></script>
    <script src="/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/admin-lte/dist/js/adminlte.min.js"></script>
    <script src="/js/script.js"></script>

  </body>
</html>
